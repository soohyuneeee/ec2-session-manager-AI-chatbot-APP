{
  "family": "ec2-session-manager-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.ap-northeast-2.amazonaws.com/ec2-session-manager:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3003,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "3003"
        },
        {
          "name": "AWS_REGION",
          "value": "ap-northeast-2"
        },
        {
          "name": "BEDROCK_REGION",
          "value": "us-east-1"
        },
        {
          "name": "REDIS_HOST",
          "value": "REDIS_SERVICE_DISCOVERY_NAME"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        }
      ],
      "secrets": [
        {
          "name": "AWS_ACCESS_KEY_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:YOUR_ACCOUNT_ID:secret:ec2-session-manager/aws-credentials:AWS_ACCESS_KEY_ID::"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:YOUR_ACCOUNT_ID:secret:ec2-session-manager/aws-credentials:AWS_SECRET_ACCESS_KEY::"
        },
        {
          "name": "BEDROCK_MODEL_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:YOUR_ACCOUNT_ID:secret:ec2-session-manager/aws-credentials:BEDROCK_MODEL_ID::"
        },
        {
          "name": "CROSS_ACCOUNT_ROLE_ARN",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:YOUR_ACCOUNT_ID:secret:ec2-session-manager/aws-credentials:CROSS_ACCOUNT_ROLE_ARN::"
        },
        {
          "name": "CROSS_ACCOUNT_EXTERNAL_ID",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:YOUR_ACCOUNT_ID:secret:ec2-session-manager/aws-credentials:CROSS_ACCOUNT_EXTERNAL_ID::"
        },
        {
          "name": "CROSS_ACCOUNT_SESSION_NAME",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-2:YOUR_ACCOUNT_ID:secret:ec2-session-manager/aws-credentials:CROSS_ACCOUNT_SESSION_NAME::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ec2-session-manager-app",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "app"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3003/api/redis/status || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
